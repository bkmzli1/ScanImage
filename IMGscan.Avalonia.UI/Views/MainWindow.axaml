<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IMGscan.Avalonia.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:IMGscan.WPF.UI.ViewModels;assembly=Core"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IMGscan.Avalonia.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="IMGscan.Avalonia.UI"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <viewModels:MainVeiwModels/>
    </Design.DataContext>

    <TextBlock Text="{Binding MainDiskName}"></TextBlock>
</Window>
